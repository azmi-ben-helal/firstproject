{% extends "@App/portfolio/base2.html.twig" %}

{% block title %}AppBundle:personne:cvs{% endblock %}

{% block body %}
    <h1>Welcome to the personne:cvs page</h1>
    <div class="container">
        <div class="row">

            {% for personne in personnes %}
                <div class="col-md-4">
                    <div class="media user">
                        <a class="media-avatar pull-left" href="#">

                            <img style=" border-radius: 50%;  width: 160px; height :160px;"
                                 src="{{ asset(personne._path|default('../images/newme.jpg')) }}">
                        </a>
                        <div class="media-body">
                            <h3 class="media-title">
                                {{ personne._prenom }} {{ personne._nom }}
                            </h3>
                            <p>
                                <small class="muted">{{ personne._age }} </small>
                            </p>
                            <div>
                                {{ "now"|date("m/d/Y") }}
                            </div>
                            <div class="media-option btn-group shaded-icon">
                                <button class="btn btn-small">
                                    <i class="fa fa-envelope"></i>
                                </button>
                                {% if personne._prenom is same as('aymen') %}
                                    <a href="{{ path('cv') }}">
                                        <button class="btn btn-small">

                                            <i class="fa fa-share"></i>
                                        </button>
                                    </a>
                                {% else %}
                                    <button class="btn btn-small">
                                        <i class="fa fa-share"></i>
                                    </button>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <li><em>no CV found</em></li>

            {% endfor %}
        </div>
    </div>
{% endblock %}
